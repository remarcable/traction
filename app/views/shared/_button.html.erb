<%
  button_classes = "inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-500 rounded-lg hover:bg-slate-200 transition-colors"
  button_content = capture do
    if local_assigns[:icon].present?
      concat heroicon(icon, type: :outline, class: "w-5 h-5")
    end
    concat content_tag(:span, title)
  end
%>

<% if local_assigns[:link].present? %>
  <%= link_to link, class: button_classes do %>
    <%= button_content %>
  <% end %>
<% else %>
  <button class="<%= button_classes %>">
    <%= button_content %>
  <% end %>
