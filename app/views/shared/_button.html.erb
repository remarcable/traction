<%
  button_classes = "button"
  button_content = capture do
    if local_assigns[:icon].present?
      concat heroicon(icon, type: :outline)
    end
    concat content_tag(:span, title)
  end
%>

<% if local_assigns[:link].present? %>
  <%= link_to link, class: button_classes do %>
    <%= button_content %>
  <% end %>
<% else %>
  <button class="<%= button_classes %>">
    <%= button_content %>
  <% end %>
