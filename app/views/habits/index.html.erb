<% content_for :title, "Habits" %>

<div class="habits__container">
  <h1 class="habits__title">Traction</h1>

  <% if notice.present? %>
    <div class="rounded-md bg-green-50 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= heroicon "check-circle", class: "h-5 w-5 text-green-400" %>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="habits__habits">
    <% @habits.each do |habit| %>
      <%= render habit %>
    <% end %>
  </div>

  <%= link_to new_habit_path, class: "button" do %>
    <%= heroicon "plus" %>
    Add Habit
  <% end %>
</div>
